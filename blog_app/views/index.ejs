<!DOCTYPE html>
<html lang="en">
<head>
    <title>Blog Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>My Blog</h1>
    <a href="/new">Create New Post</a>
    <div>
        <% posts.forEach(post => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <a href="/edit/<%= post.id %>">Edit</a>
                <form action="/posts/<%= post.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% }) %>
    </div>
</body>
</html>
